<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/emptyView"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:visibility="invisible"
              android:orientation="vertical"
              android:gravity="center">

    <ImageView
            android:id="@+id/emptyImage"
            android:layout_width="@dimen/size_empty_view_image"
            android:layout_height="@dimen/size_empty_view_image"/>

    <TextView
            android:id="@+id/emptyTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_empty_view_title"/>

    <TextView
            android:id="@+id/emptyDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_empty_view_decsription"/>
</LinearLayout>